{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Flask",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/main.py",
      "console": "integratedTerminal",
     "env": {
       "FLASK_APP": "main.py",
       "FLASK_ENV": "development"
     },
     "args": [
       "run",
       "--host=0.0.0.0",
       "--port=8080",
       "--no-debugger",
       "--no-reload"
     ],
     "jinja": true
   }
 ]
}